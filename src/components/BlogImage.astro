---
import { Image } from 'astro:assets';
import { blogImages } from '../assets/blog';
import type { BlogImageKey } from '../assets/blog';

interface Props {
  imageKey: BlogImageKey;
  alt: string;
  class?: string;
  'transition:name'?: string;
}

const { imageKey, alt, class: className, 'transition:name': transitionName } = Astro.props;
const image = blogImages[imageKey];
---

<Image
  src={image}
  alt={alt}
  class={className}
  width={800}
  height={400}
  format="webp"
  quality={80}
  transition:name={transitionName}
/> 