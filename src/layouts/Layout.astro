---
import { ViewTransitions } from 'astro:transitions';
import WhatsAppButton from '../components/WhatsAppButton.astro';

interface Props {
    title: string;
    description?: string;
    schema?: string;
}

const { title, description, schema } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, 'https://animals.glogow.pl').toString();
---

<!doctype html>
<html lang="pl">
