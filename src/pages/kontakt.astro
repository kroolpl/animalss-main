---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

// Add types for form data
interface FormData {
    name: string;
    email: string;
    subject: string;
    message: string;
}
---

<Layout title="Kontakt - ANIMALS">
	<Hero 
		title="Kontakt"
		description="Jesteśmy tutaj, aby odpowiedzieć na Twoje pytania i pomóc w wyborze najlepszej karmy dla Twojego pupila."
	/>

	<!-- Main Content -->
	<div class="bg-gradient-to-b from-primary-50 to-white">
		<div class="container mx-auto px-4 py-16">
			<div class="max-w-7xl mx-auto">
				<!-- Contact Grid -->
				<div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
					<!-- Left Column - Contact Info -->
					<div class="lg:col-span-1 space-y-8">
						<div class="bg-white rounded-2xl shadow-xl p-8">
							<div class="space-y-8">
								<!-- Phone -->
								<div class="flex items-start gap-6">
									<div class="w-12 h-12 bg-accent-50 rounded-xl flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-accent-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
										</svg>
									</div>
									<div>
										<h3 class="text-lg font-bold text-primary-900 mb-1">Telefon</h3>
										<p class="text-primary-600 mb-2">Jesteśmy dostępni w godzinach pracy</p>
										<a href="tel:886147831" class="text-accent-500 font-medium hover:text-accent-600 transition-colors">
											886 147 831
										</a>
									</div>
								</div>

								<!-- Email -->
								<div class="flex items-start gap-6">
									<div class="w-12 h-12 bg-accent-50 rounded-xl flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-accent-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
										</svg>
									</div>
									<div>
										<h3 class="text-lg font-bold text-primary-900 mb-1">Email</h3>
										<p class="text-primary-600 mb-2">Odpowiadamy w ciągu 24h</p>
										<a href="mailto:kontakt@animals.pl" class="text-accent-500 font-medium hover:text-accent-600 transition-colors">
											kontakt@animals.pl
										</a>
									</div>
								</div>

								<!-- Address -->
								<div class="flex items-start gap-6">
									<div class="w-12 h-12 bg-accent-50 rounded-xl flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-accent-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
										</svg>
									</div>
									<div>
										<h3 class="text-lg font-bold text-primary-900 mb-1">Adres</h3>
										<p class="text-primary-600">ul. Polska 5</p>
										<p class="text-primary-600">67-200 Głogów</p>
									</div>
								</div>

								<!-- Hours -->
								<div class="flex items-start gap-6">
									<div class="w-12 h-12 bg-accent-50 rounded-xl flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-accent-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
										</svg>
									</div>
									<div>
										<h3 class="text-lg font-bold text-primary-900 mb-1">Godziny otwarcia</h3>
										<div class="space-y-2 text-primary-600">
											<p class="flex justify-between">
												<span>Poniedziałek - Piątek</span>
												<span class="font-medium">9:00 - 18:00</span>
											</p>
											<p class="flex justify-between">
												<span>Sobota</span>
												<span class="font-medium">9:00 - 14:00</span>
											</p>
											<p class="flex justify-between">
												<span>Niedziela</span>
												<span class="font-medium">Zamknięte</span>
											</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Right Column - Form and Map -->
					<div class="lg:col-span-2 space-y-8">
						<!-- Contact Form -->
						<div class="bg-white rounded-2xl shadow-xl p-8">
							<h2 class="text-2xl font-display font-bold mb-8 text-primary-900">Napisz do nas</h2>
							<form class="space-y-6">
								<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
									<div>
										<label class="block text-sm font-medium text-primary-700 mb-2" for="name">Imię i nazwisko</label>
										<input 
											type="text" 
											id="name"
											class="w-full px-4 py-3 rounded-xl border border-primary-200 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors"
											placeholder="Jan Kowalski"
										>
									</div>
									<div>
										<label class="block text-sm font-medium text-primary-700 mb-2" for="email">Email</label>
										<input 
											type="email" 
											id="email"
											class="w-full px-4 py-3 rounded-xl border border-primary-200 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors"
											placeholder="jan@example.com"
										>
									</div>
								</div>
								<div>
									<label class="block text-sm font-medium text-primary-700 mb-2" for="subject">Temat</label>
									<select 
										id="subject"
										class="w-full px-4 py-3 rounded-xl border border-primary-200 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors"
									>
										<option value="">Wybierz temat</option>
										<option value="karma">Dobór karmy</option>
										<option value="porada">Porada żywieniowa</option>
										<option value="wspolpraca">Współpraca</option>
										<option value="inne">Inne</option>
									</select>
								</div>
								<div>
									<label class="block text-sm font-medium text-primary-700 mb-2" for="message">Wiadomość</label>
									<textarea 
										id="message"
										rows="6"
										class="w-full px-4 py-3 rounded-xl border border-primary-200 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors"
										placeholder="W czym możemy pomóc?"
									></textarea>
								</div>
								<button type="submit" class="w-full bg-accent-500 text-white py-4 px-6 rounded-xl hover:bg-accent-600 transition-colors font-medium">
									Wyślij wiadomość
								</button>
							</form>
						</div>

						<!-- Map -->
						<div id="mapa" class="bg-white rounded-2xl shadow-xl overflow-hidden">
							<iframe 
								src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d39590.91537657766!2d16.00230717066013!3d51.67023127548223!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4705f5dedb175b31%3A0x452a3f8a92bafd17!2sANIMALS%20profesjonalny%20sklep%20zoologiczny!5e0!3m2!1sen!2spl!4v1730670330243!5m2!1sen!2spl" 
								width="100%" 
								height="400" 
								style="border:0;" 
								allowfullscreen="" 
								loading="lazy"
								class="w-full"
							></iframe>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>