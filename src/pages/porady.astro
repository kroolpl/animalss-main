---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Hero from '../components/Hero.astro';
import type { CollectionEntry } from 'astro:content';
import FloatingElements from '../components/FloatingElements.astro';

// Add type safety
type Porada = CollectionEntry<'porady'>;

// Add error handling for collection fetching
let sortedPorady: Porada[] = [];
try {
    const porady = await getCollection('porady');
    sortedPorady = porady.sort((a, b) => 
        new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
    );
} catch (error) {
    console.error('Error fetching porady:', error);
}

// Calculate meta description from latest articles
const metaDescription = sortedPorady.length > 0 
    ? `Najnowsze porady: ${sortedPorady.slice(0, 2).map(p => p.data.title).join(', ')}`
    : 'Praktyczne wskaz贸wki i profesjonalne porady dotyczce 偶ywienia i pielgnacji zwierzt';

const pageTitle = "Porady i Artykuy - ANIMALS | Profesjonalne porady 偶ywieniowe";
const pageDescription = "Praktyczne wskaz贸wki i profesjonalne porady dotyczce 偶ywienia i pielgnacji zwierzt. Dowiedz si jak dba o swojego pupila z ANIMALS Gog贸w.";
---

<Layout 
    title={pageTitle}
    description={pageDescription}
>
    <div class="relative overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute inset-0 bg-[url('/pattern.svg')] opacity-5"></div>
        <div class="absolute top-20 right-20 w-64 h-64 bg-accent-500/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-10 left-10 w-96 h-96 bg-primary-700/20 rounded-full blur-3xl"></div>

       
        <!-- Hero Section with enhanced styling -->
<div class="bg-gradient-to-b from-primary-900 to-primary-800 relative">
    <!-- Floating Consultation Badge -->
    <div class="absolute bottom-[-20px] right-12 md:right-12 z-10 animate-float">
        <a href="/kontakt" class="group">
            <div class="bg-white/10 backdrop-blur-md rounded-2xl p-4 shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-1 border border-white/20">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-accent-500/20 rounded-xl flex items-center justify-center">
                        <span class="text-2xl"></span>
                    </div>
                    <div>
                        <div class="font-bold text-white">Bezpatna porada</div>
                        <div class="text-sm text-primary-200">dostpna w sklepie</div>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary-200 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
        </a>
    </div>
    <Hero 
        title="Porady i Artykuy"
        description="Praktyczne wskaz贸wki i profesjonalne porady dotyczce 偶ywienia i pielgnacji zwierzt"
    />
</div>
        <div class="bg-gradient-to-b from-primary-50 via-white to-primary-50 relative">
            <div class="container mx-auto px-4 py-16">
                <!-- Articles Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 max-w-7xl mx-auto">
                    {sortedPorady.length > 0 ? (
                        sortedPorady.map((porada, index) => (
                            <article 
                                class={`group relative ${index === 0 ? 'md:col-span-2 lg:col-span-3' : ''}`}
                                aria-labelledby={`article-${porada.slug}`}
                            >
                                <a href={`/porady/${porada.slug}`} 
                                   class={`block h-full bg-white rounded-2xl shadow hover:shadow-lg transition-all duration-300 overflow-hidden relative
                                          ${index === 0 ? 'lg:grid lg:grid-cols-2 lg:gap-8' : 'flex flex-col'}`}
                                >
                                    <div class={`relative overflow-hidden ${index === 0 ? 'lg:rounded-l-2xl aspect-[16/9] lg:aspect-auto' : 'rounded-t-2xl aspect-[16/10]'}`}>
                                        {porada.data.image && (
                                            <Image 
                                                src={porada.data.image}
                                                alt={porada.data.title}
                                                width={800}
                                                height={400}
                                                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                                                transition:name={`image-${porada.slug}`}
                                                format="webp"
                                                quality={80}
                                            />
                                        )}
                                    </div>
                                    <div class="p-6 flex flex-col flex-grow">
                                        <h2 
                                            id={`article-${porada.slug}`}
                                            class="text-xl font-bold text-primary-900 mb-2 transition-colors duration-300 group-hover:text-accent-500"
                                            transition:name={`title-${porada.slug}`}
                                        >
                                            {porada.data.title}
                                        </h2>
                                        <p class="text-primary-600 mb-4 line-clamp-2">{porada.data.excerpt}</p>
                                        <div class="mt-auto flex items-center gap-4 text-sm text-primary-500">
                                            <time>{new Date(porada.data.date).toLocaleDateString('pl-PL', {
                                                day: 'numeric',
                                                month: 'long',
                                                year: 'numeric'
                                            })}</time>
                                            <span class="w-1 h-1 bg-primary-300 rounded-full"></span>
                                            <span>{porada.data.author}</span>
                                        </div>
                                    </div>
                                </a>
                            </article>
                        ))
                    ) : (
                        <div class="col-span-full text-center py-16">
                            <div class="max-w-md mx-auto">
                                <p class="text-xl text-primary-600 mb-4">Przepraszamy, aktualnie brak dostpnych porad.</p>
                                <p class="text-primary-500">Sprawd藕 ponownie p贸藕niej lub skontaktuj si z nami bezporednio.</p>
                            </div>
                        </div>
                    )}
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    @keyframes float {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-10px);
    }
}

.animate-float {
    animation: float 3s ease-in-out infinite;
}
</style>
