---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const porady = await getCollection('porady');
  return porady.map(entry => ({
    params: { slug: entry.slug },
    props: { entry, recommendations: porady.filter(p => p.slug !== entry.slug).slice(0, 3) },
  }));
}

const { entry, recommendations } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} - ANIMALS`}>
  <article>
    <!-- Hero Section -->
    <div class="relative bg-gradient-to-b from-primary-900 to-primary-800 text-white">
      <div class="absolute inset-0 bg-[url('/pattern.svg')] opacity-5"></div>
      <div class="container mx-auto px-4 py-24 relative">
        <div class="max-w-4xl mx-auto">
          <div class="flex items-center gap-4 mb-8 text-primary-200">
            <time>{new Date(entry.data.date).toLocaleDateString('pl-PL', {
              day: 'numeric',
              month: 'long',
              year: 'numeric'
            })}</time>
            <span class="w-1 h-1 bg-primary-400 rounded-full"></span>
            <span>{entry.data.author}</span>
          </div>
          <h1 class="text-4xl md:text-5xl font-display font-bold mb-6" transition:name={`title-${entry.slug}`}>
            {entry.data.title}
          </h1>
          <p class="text-xl text-primary-100">{entry.data.excerpt}</p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="bg-gradient-to-b from-primary-50 to-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          {entry.data.image && (
            <div class="mb-16 -mt-32 rounded-2xl overflow-hidden shadow-2xl">
              <Image 
                src={entry.data.image}
                alt={entry.data.title}
                width={1200}
                height={630}
                class="w-full aspect-[21/9] object-cover"
                transition:name={`image-${entry.slug}`}
                format="webp"
                quality={80}
                loading="eager"
              />
            </div>
          )}
          
          <div class="prose prose-lg mx-auto">
            <Content />
          </div>

          <!-- Recommended Articles -->
          <div class="mt-16 pt-16 border-t border-primary-100">
            <h2 class="text-3xl font-bold text-primary-900 mb-8 text-center">Polecane artyku≈Çy</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              {recommendations.map((article) => (
                <a 
                  href={`/porady/${article.slug}`}
                  class="group block bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300"
                >
                  {article.data.image && (
                    <div class="aspect-[16/9] overflow-hidden">
                      <Image 
                        src={article.data.image}
                        alt={article.data.title}
                        width={400}
                        height={225}
                        class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
                        format="webp"
                        quality={80}
                      />
                    </div>
                  )}
                  <div class="p-6">
                    <h3 class="font-bold text-lg text-primary-900 mb-2 group-hover:text-accent-500 transition-colors">
                      {article.data.title}
                    </h3>
                    <p class="text-primary-600 text-sm line-clamp-2">
                      {article.data.excerpt}
                    </p>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style is:global>
  .prose h2 {
    margin-top: 2.5em;
    margin-bottom: 1em;
  }
  .prose h3 {
    margin-top: 2em;
    margin-bottom: 0.8em;
  }
  .prose p {
    margin-bottom: 1.5em;
    line-height: 1.8;
  }
  .prose ul {
    margin-top: 1.5em;
    margin-bottom: 1.5em;
  }
  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }
  .prose hr {
    margin: 3em 0;
    border-color: #e2e8f0;
  }
</style> 